<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.graps.remindme.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_intakeFragment"
            app:destination="@id/intakeFragment" />
    </fragment>
    <fragment
        android:id="@+id/intakeFragment"
        android:name="com.graps.remindme.ui.inTake.IntakeFragment"
        android:label="IntakeFragment" >
        <action
            android:id="@+id/action_intakeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>