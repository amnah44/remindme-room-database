<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemindMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="date_picker_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimaryInverse">@color/blue_light</item>
        <item name="android:colorControlActivated">@color/blue_light</item>
    </style>

    <style name="recyclerViewItemsColor">
        <item name="cardBackgroundColor">@color/app_color</item>
    </style>

    <style name="intake_background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="circleViewStyle">
        <item name="android:background">@drawable/circle_view</item>
        <item name="cardBackgroundColor">@color/app_color</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/rounded_corner_view</item>
        <item name="cardBackgroundColor">@color/app_color</item>
    </style>
</resources>